---
/**
 * Footer component with links, legal info, and social media.
 */

import { theme } from '../theme.config';

interface Props {
  t: any;
}

const { t } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class={`bg-${theme.colors.background.darker} border-t border-${theme.colors.border.subtle}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
      <!-- Brand Column -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="inline-flex items-center gap-3 mb-4">
          <img src="/logo.png" alt="TranslitPro Logo" class="h-8 w-8" />
          <img src="/title.png" alt="TranslitPro" class="h-8" />
        </a>
        <p class="text-slate-400 text-sm leading-relaxed">
          {t.footer.tagline}
        </p>
      </div>

      <!-- Product Links -->
      <div>
        <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">{t.footer.product}</h4>
        <ul class="space-y-3">
          <li><a href="#features" class="text-slate-400 hover:text-white text-sm transition-colors">{t.nav.features}</a></li>
          <li><a href="#pricing" class="text-slate-400 hover:text-white text-sm transition-colors">{t.nav.pricing}</a></li>
          <li><a href="#faq" class="text-slate-400 hover:text-white text-sm transition-colors">{t.nav.faq}</a></li>
          <li><a href="https://app.translitpro.com" class="text-slate-400 hover:text-white text-sm transition-colors">{t.footer.openApp}</a></li>
        </ul>
      </div>

      <!-- Scripts Links -->
      <div>
        <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">{t.footer.scripts}</h4>
        <ul class="space-y-3">
          <li><a href="https://app.translitpro.com?lang=ru" class="text-slate-400 hover:text-white text-sm transition-colors">{t.footer.cyrillic}</a></li>
          <li><a href="https://app.translitpro.com?lang=he" class="text-slate-400 hover:text-white text-sm transition-colors">{t.footer.hebrew}</a></li>
          <li><a href="https://app.translitpro.com?lang=el" class="text-slate-400 hover:text-white text-sm transition-colors">{t.footer.greek}</a></li>
          <li><a href="https://app.translitpro.com?lang=ka" class="text-slate-400 hover:text-white text-sm transition-colors">{t.footer.georgian}</a></li>
          <li><a href="https://app.translitpro.com?lang=hy" class="text-slate-400 hover:text-white text-sm transition-colors">{t.footer.armenian}</a></li>
          <li><a href="https://app.translitpro.com" class="text-slate-400 hover:text-white text-sm transition-colors">{t.footer.custom}</a></li>
        </ul>
      </div>

      <!-- Legal Links -->
      <div>
        <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">{t.footer.legal}</h4>
        <ul class="space-y-3">
          <li><a href="/privacy" class="text-slate-400 hover:text-white text-sm transition-colors">{t.footer.privacyPolicy}</a></li>
          <li><a href="/terms" class="text-slate-400 hover:text-white text-sm transition-colors">{t.footer.termsOfService}</a></li>
        </ul>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-slate-800 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-slate-500 text-sm">
        {t.footer.copyright.replace('{{year}}', currentYear.toString())}
      </p>
      
      <!-- Social Links -->
      <div class="flex items-center gap-4">
        <a href="https://twitter.com/translitpro" class="text-slate-400 hover:text-white transition-colors" aria-label="Twitter">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a href="https://www.facebook.com/profile.php?id=61585741537263" class="text-slate-400 hover:text-white transition-colors" aria-label="Facebook">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>

