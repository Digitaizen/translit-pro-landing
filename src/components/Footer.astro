---
/**
 * Footer component with links, legal info, and social media.
 */

const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { name: 'Features', href: '#features' },
    { name: 'Pricing', href: '#pricing' },
    { name: 'FAQ', href: '#faq' },
    { name: 'Open App', href: 'https://app.translitpro.com' },
  ],
  scripts: [
    { name: 'Cyrillic', href: 'https://app.translitpro.com?lang=ru' },
    { name: 'Hebrew', href: 'https://app.translitpro.com?lang=he' },
    { name: 'Greek', href: 'https://app.translitpro.com?lang=el' },
    { name: 'Georgian', href: 'https://app.translitpro.com?lang=ka' },
    { name: 'Armenian', href: 'https://app.translitpro.com?lang=hy' },
    { name: '+ Custom', href: 'https://app.translitpro.com' },
  ],
  legal: [
    { name: 'Privacy Policy', href: '/privacy' },
    { name: 'Terms of Service', href: '/terms' },
  ],
};
---

<footer class="bg-slate-950 border-t border-slate-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
      <!-- Brand Column -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="inline-flex items-center gap-3 mb-4">
          <img src="/logo.png" alt="TranslitPro Logo" class="h-8 w-8" />
          <img src="/title.png" alt="TranslitPro" class="h-8" />
        </a>
        <p class="text-slate-400 text-sm leading-relaxed">
          Desktop transliteration suite for 13+ languages. Type in Latin, get Cyrillic, Hebrew, Greek, and more.
        </p>
      </div>
      
      <!-- Product Links -->
      <div>
        <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">Product</h4>
        <ul class="space-y-3">
          {footerLinks.product.map((link) => (
            <li>
              <a href={link.href} class="text-slate-400 hover:text-white text-sm transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Scripts Links -->
      <div>
        <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">Scripts</h4>
        <ul class="space-y-3">
          {footerLinks.scripts.map((link) => (
            <li>
              <a href={link.href} class="text-slate-400 hover:text-white text-sm transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Legal Links -->
      <div>
        <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">Legal</h4>
        <ul class="space-y-3">
          {footerLinks.legal.map((link) => (
            <li>
              <a href={link.href} class="text-slate-400 hover:text-white text-sm transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-slate-800 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-slate-500 text-sm">
        Â© {currentYear} TranslitPro. All rights reserved.
      </p>
      
      <!-- Social Links -->
      <div class="flex items-center gap-4">
        <a href="https://twitter.com/translitpro" class="text-slate-400 hover:text-white transition-colors" aria-label="Twitter">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a href="https://facebook.com/translitpro" class="text-slate-400 hover:text-white transition-colors" aria-label="Facebook">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>

