---
/**
 * Hero section component - the main above-the-fold content.
 * Includes headline, subheadline, CTAs, and a visual demo.
 */

interface Props {
  t: any;
}

const { t } = Astro.props;

if (!t || !t.hero) {
  throw new Error('Hero component requires translations prop (t) with hero section');
}
---

<section class="relative pt-32 pb-20 sm:pt-40 sm:pb-24 overflow-hidden">
  <!-- Background Gradient -->
  <div class="absolute inset-0 bg-gradient-to-b from-indigo-900/20 via-slate-900 to-slate-900"></div>
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[600px] bg-indigo-500/20 rounded-full blur-3xl"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-4xl mx-auto">
      <!-- Badge -->
      <div class="inline-flex items-center px-4 py-1.5 mb-6 text-sm font-medium text-indigo-300 bg-indigo-500/10 rounded-full border border-indigo-500/20">
        <span class="mr-2">üñ•Ô∏è</span>
        {t.hero.badge}
      </div>

      <!-- Headline -->
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight mb-6">
        <span class="text-white">{t.hero.headline1} </span>
        <span class="bg-gradient-to-r from-indigo-400 via-purple-400 to-indigo-400 bg-clip-text text-transparent">
          {t.hero.headline2}
        </span>
        <br />
        <span class="text-white">{t.hero.headline3}</span>
      </h1>

      <!-- Subheadline -->
      <p class="text-lg sm:text-xl text-slate-400 max-w-2xl mx-auto mb-10">
        {t.hero.subheadline}
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-16">
        <a
          href="https://app.translitpro.com"
          class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-indigo-600 hover:bg-indigo-500 rounded-xl shadow-lg shadow-indigo-500/25 transition-all hover:shadow-indigo-500/40"
        >
          {t.hero.ctaPrimary}
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        <a
          href="#pricing"
          class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-slate-300 bg-slate-800 hover:bg-slate-700 rounded-xl transition-colors"
        >
          {t.hero.ctaSecondary}
        </a>
      </div>

      <!-- Demo Preview -->
      <div class="relative mx-auto max-w-3xl">
        <div class="absolute inset-0 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-2xl blur-xl opacity-20"></div>
        <div class="relative bg-slate-800 rounded-2xl border border-slate-700 shadow-2xl overflow-hidden">
          <!-- Browser Chrome -->
          <div class="flex items-center gap-2 px-4 py-3 bg-slate-900 border-b border-slate-700">
            <div class="flex gap-1.5">
              <div class="w-3 h-3 rounded-full bg-red-500"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <div class="w-3 h-3 rounded-full bg-green-400"></div>
            </div>
            <div class="flex-1 ml-4">
              <div class="max-w-md mx-auto px-4 py-1.5 bg-slate-800 rounded-md text-sm text-slate-400 text-center">
                app.translitpro.com
              </div>
            </div>
          </div>

          <!-- Demo Content -->
          <div class="p-8">
            <div class="flex flex-col gap-4">
              <div class="text-left">
                <label class="text-xs text-slate-500 uppercase tracking-wider mb-2 block">You Type (Latin)</label>
                <div class="px-4 py-3 bg-slate-900 rounded-lg text-lg font-mono text-slate-300">
                  Privet, kak dela?
                </div>
              </div>
              <div class="flex justify-center">
                <svg class="w-6 h-6 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                </svg>
              </div>
              <div class="text-left">
                <label class="text-xs text-slate-500 uppercase tracking-wider mb-2 block">You Get (Russian)</label>
                <div class="px-4 py-3 bg-slate-900 rounded-lg text-lg font-mono text-indigo-300">
                  –ü—Ä–∏–≤–µ—Ç, –∫–∞–∫ –¥–µ–ª–∞?
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Trust Indicators -->
      <div class="mt-16 flex flex-wrap items-center justify-center gap-x-8 gap-y-4 text-sm text-slate-500">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>{t.hero.trustBadge1}</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>{t.hero.trustBadge2}</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>{t.hero.trustBadge3}</span>
        </div>
      </div>
    </div>
  </div>
</section>

