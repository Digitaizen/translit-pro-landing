---
/**
 * FAQ section component with structured data for SEO.
 * Expandable accordion-style questions and answers.
 */

interface Props {
  t: any;
}

const { t } = Astro.props;

const faqs = [
  t.faq.questions.whatIsTransliteration,
  t.faq.questions.whichLanguages,
  t.faq.questions.mobileOrDesktop,
  t.faq.questions.whatIsBookmarklet,
  t.faq.questions.beyondTransliteration,
  t.faq.questions.freeTrial,
  t.faq.questions.addOwnLanguage,
  t.faq.questions.cancelAnytime
];

// Generate FAQ structured data for SEO
const faqStructuredData = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
---

<section id="faq" class="py-20 sm:py-32 bg-slate-900">
  <!-- FAQ Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(faqStructuredData)} />
  
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
        {t.faq.title}
      </h2>
      <p class="text-lg text-slate-400">
        {t.faq.subtitle}
      </p>
    </div>
    
    <!-- FAQ List -->
    <div class="space-y-4">
      {faqs.map((faq, index) => (
        <details class="group bg-slate-800/50 rounded-xl border border-slate-700/50">
          <summary class="flex items-center justify-between cursor-pointer p-6 text-left">
            <h3 class="text-lg font-medium text-white pr-4">{faq.question}</h3>
            <svg class="w-5 h-5 text-slate-400 shrink-0 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </summary>
          <div class="px-6 pb-6">
            <p class="text-slate-400 leading-relaxed">{faq.answer}</p>
          </div>
        </details>
      ))}
    </div>
    
    <!-- Contact CTA -->
    <div class="mt-12 text-center">
      <p class="text-slate-400 mb-4">Still have questions?</p>
      <a
        href="mailto:support@translitpro.com"
        class="inline-flex items-center px-6 py-3 text-sm font-semibold text-white bg-slate-800 hover:bg-slate-700 rounded-lg transition-colors"
      >
        Contact Support
      </a>
    </div>
  </div>
</section>

