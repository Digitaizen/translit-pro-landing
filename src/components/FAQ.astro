---
/**
 * FAQ section component with structured data for SEO.
 * Expandable accordion-style questions and answers.
 */

import { theme } from '../theme.config';

interface Props {
  t: any;
}

const { t } = Astro.props;

const faqs = [
  t.faq.questions.whatIsTransliteration,
  t.faq.questions.whichLanguages,
  t.faq.questions.mobileOrDesktop,
  t.faq.questions.whatIsBookmarklet,
  t.faq.questions.beyondTransliteration,
  t.faq.questions.freeTrial,
  t.faq.questions.addOwnLanguage,
  t.faq.questions.cancelAnytime
];

// Generate FAQ structured data for SEO
const faqStructuredData = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
---

<section id="faq" class={`py-20 sm:py-32 bg-${theme.colors.background.base}`}>
  <!-- FAQ Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(faqStructuredData)} />

  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class={`text-3xl sm:text-4xl font-bold text-${theme.colors.text.primary} mb-4`}>
        {t.faq.title}
      </h2>
      <p class={`text-lg text-${theme.colors.text.muted}`}>
        {t.faq.subtitle}
      </p>
    </div>

    <!-- FAQ List -->
    <div class="space-y-4">
      {faqs.map((faq, index) => (
        <details class={`group bg-${theme.colors.background.elevated}/${theme.opacity.subtle} rounded-xl border border-${theme.colors.border.default}/${theme.opacity.subtle}`}>
          <summary class="flex items-center justify-between cursor-pointer p-6 text-left">
            <h3 class={`text-lg font-medium text-${theme.colors.text.primary} pr-4`}>{faq.question}</h3>
            <svg class={`w-5 h-5 text-${theme.colors.text.muted} shrink-0 transition-transform group-open:rotate-180`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </summary>
          <div class="px-6 pb-6">
            <p class={`text-${theme.colors.text.muted} leading-relaxed`}>{faq.answer}</p>
          </div>
        </details>
      ))}
    </div>

    <!-- Contact CTA -->
    <div class="mt-12 text-center">
      <p class={`text-${theme.colors.text.muted} mb-4`}>Still have questions?</p>
      <a
        href="mailto:support@translitpro.com"
        class={`inline-flex items-center px-6 py-3 text-sm font-semibold text-${theme.colors.text.primary} bg-${theme.colors.background.elevated} hover:bg-${theme.colors.background.subtle} rounded-lg transition-colors`}
      >
        Contact Support
      </a>
    </div>
  </div>
</section>

