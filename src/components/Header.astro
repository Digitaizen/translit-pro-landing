---
/**
 * Header/Navigation component for the landing page.
 * Includes logo, navigation links, language dropdown, and CTA button.
 */

import LanguageDropdown from './LanguageDropdown.astro';
import { theme } from '../theme.config';

interface Props {
  currentLang?: string;
  t: any;
}

const { currentLang = 'en', t } = Astro.props;
---

<header class={`fixed top-0 left-0 right-0 z-50 bg-${theme.colors.background.base}/${theme.opacity.medium} backdrop-blur-md border-b border-${theme.colors.border.subtle}`}>
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3">
        <img src="/logo.png" alt="TranslitPro Logo" class="h-8 w-8" />
        <img src="/title.png" alt="TranslitPro" class="h-8" />
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="#features" class={`text-${theme.colors.text.secondary} hover:text-${theme.colors.text.primary} transition-colors`}>
          {t.nav.features}
        </a>
        <a href="#pricing" class={`text-${theme.colors.text.secondary} hover:text-${theme.colors.text.primary} transition-colors`}>
          {t.nav.pricing}
        </a>
        <a href="#faq" class={`text-${theme.colors.text.secondary} hover:text-${theme.colors.text.primary} transition-colors`}>
          {t.nav.faq}
        </a>
      </div>

      <!-- CTA Buttons & Language Dropdown -->
      <div class="flex items-center space-x-2 sm:space-x-4">
        <LanguageDropdown currentLang={currentLang} />
        <a
          href="https://app.translitpro.com"
          class={`hidden sm:inline-flex px-4 py-2 text-sm font-medium text-${theme.colors.text.secondary} hover:text-${theme.colors.text.primary} transition-colors`}
        >
          {t.nav.signIn}
        </a>
        <a
          href="https://app.translitpro.com"
          class={`inline-flex px-4 py-2 text-sm font-semibold text-${theme.colors.text.primary} bg-${theme.colors.primary.dark} hover:bg-${theme.colors.primary.main} rounded-lg transition-colors`}
        >
          {t.nav.tryFree}
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-slate-400 hover:text-white"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class={`flex flex-col space-y-4 pt-4 border-t border-${theme.colors.border.subtle}`}>
        <a href="#features" class={`text-${theme.colors.text.secondary} hover:text-${theme.colors.text.primary} transition-colors`}>
          {t.nav.features}
        </a>
        <a href="#pricing" class={`text-${theme.colors.text.secondary} hover:text-${theme.colors.text.primary} transition-colors`}>
          {t.nav.pricing}
        </a>
        <a href="#faq" class={`text-${theme.colors.text.secondary} hover:text-${theme.colors.text.primary} transition-colors`}>
          {t.nav.faq}
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>

