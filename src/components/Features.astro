<section id="features" class="py-20 sm:py-32 bg-slate-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
        {t.features.title}
      </h2>
      <p class="text-lg text-slate-400">
        {t.features.subtitle}
      </p>
    </div>
    
    <!-- Features Grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {features.map((feature) => (
        <div class="group p-6 bg-slate-800/50 rounded-2xl border border-slate-700/50 hover:border-indigo-500/50 transition-colors">
          <div class="text-4xl mb-4">{feature.icon}</div>
          <h3 class="text-lg font-semibold text-white mb-2">{feature.title}</h3>
          <p class="text-slate-400 text-sm leading-relaxed">{feature.description}</p>
        </div>
      ))}
    </div>
    
    <!-- Bottom CTA -->
    <div class="mt-16 text-center">
      <a
        href="https://app.translitpro.com"
        class="inline-flex items-center px-6 py-3 text-sm font-semibold text-indigo-400 hover:text-indigo-300 transition-colors"
      >
        {t.features.exploreAll}
        <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
